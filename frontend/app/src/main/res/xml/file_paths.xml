<?xml version="1.0" encoding="utf-8"?>
<!-- file_paths.xml -->
<!-- 职责：配置 FileProvider 可访问的文件路径，用于相机拍照功能 -->
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 应用私有缓存目录 -->
    <cache-path
        name="cache"
        path="." />

    <!-- 应用私有文件目录 -->
    <files-path
        name="files"
        path="." />

    <!-- 外部缓存目录 -->
    <external-cache-path
        name="external_cache"
        path="." />

    <!-- 外部文件目录 -->
    <external-files-path
        name="external_files"
        path="." />
</paths>
