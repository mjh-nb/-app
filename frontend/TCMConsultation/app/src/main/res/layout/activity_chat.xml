<?xml version="1.0" encoding="utf-8"?>
<!-- activity_chat.xml -->
<!-- 职责：聊天问诊主界面布局，包含消息列表、输入区、图片上传等 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 聊天消息列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_messages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp" />

        <!-- 图片预览区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <!-- 舌像预览 -->
            <LinearLayout
                android:id="@+id/layout_tongue_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp">

                    <ImageView
                        android:id="@+id/iv_tongue_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_preview"
                        android:contentDescription="舌像预览"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/btn_tongue_remove"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_remove_button"
                        android:contentDescription="删除舌像"
                        android:src="@drawable/ic_close"
                        app:tint="@android:color/white" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="舌像"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <!-- 面像预览 -->
            <LinearLayout
                android:id="@+id/layout_face_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp">

                    <ImageView
                        android:id="@+id/iv_face_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_image_preview"
                        android:contentDescription="面像预览"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/btn_face_remove"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/bg_remove_button"
                        android:contentDescription="删除面像"
                        android:src="@drawable/ic_close"
                        app:tint="@android:color/white" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="面像"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 底部输入区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- 舌像上传按钮 -->
            <ImageButton
                android:id="@+id/btn_tongue"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="上传舌像"
                android:src="@drawable/ic_tongue"
                app:tint="@color/primary" />

            <!-- 面像上传按钮 -->
            <ImageButton
                android:id="@+id/btn_face"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_icon_button"
                android:contentDescription="上传面像"
                android:src="@drawable/ic_face"
                app:tint="@color/primary" />

            <!-- 文本输入框 -->
            <EditText
                android:id="@+id/et_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input"
                android:hint="请描述您的症状..."
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:minHeight="44dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp" />

            <!-- 发送按钮 -->
            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_send_button"
                android:contentDescription="发送"
                android:src="@drawable/ic_send"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
